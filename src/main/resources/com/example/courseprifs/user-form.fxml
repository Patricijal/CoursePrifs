   <children>
      <Button fx:id="saveButton" layoutX="237.0" layoutY="314.0" mnemonicParsing="false" onAction="#createNewUser" text="Save" />
      <RadioButton fx:id="userRadio" layoutX="41.0" layoutY="22.0" mnemonicParsing="false" onAction="#disableFields" selected="true" text="User">
         <toggleGroup>
            <ToggleGroup fx:id="userType" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="restaurantRadio" layoutX="124.0" layoutY="22.0" mnemonicParsing="false" onAction="#disableFields" text="Restaurant" toggleGroup="$userType" />
      <RadioButton fx:id="clientRadio" layoutX="231.0" layoutY="22.0" mnemonicParsing="false" onAction="#disableFields" text="Client" toggleGroup="$userType" />
      <RadioButton fx:id="driverRadio" layoutX="312.0" layoutY="22.0" mnemonicParsing="false" onAction="#disableFields" text="Driver" toggleGroup="$userType" />
      <AnchorPane fx:id="commonPane" layoutX="24.0" layoutY="51.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="usernameField" layoutX="27.0" layoutY="23.0" promptText="Username" />
            <PasswordField fx:id="pswField" layoutX="27.0" layoutY="58.0" promptText="Password" />
            <TextField fx:id="nameField" layoutX="29.0" layoutY="94.0" promptText="Name" />
            <TextField fx:id="surnameField" layoutX="29.0" layoutY="127.0" promptText="Surname" />
            <TextField fx:id="phoneNumField" layoutX="29.0" layoutY="161.0" promptText="Phone number" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="basicPane" layoutX="212.0" layoutY="51.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="addressField" layoutX="26.0" layoutY="24.0" promptText="Address" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="driverPane" layoutX="412.0" layoutY="51.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="licenseField" layoutX="26.0" layoutY="24.0" promptText="License" />
            <ComboBox fx:id="vehicleTypeField" layoutX="26.0" layoutY="124.0" prefWidth="150.0" promptText="Vehicle Type" />
            <DatePicker fx:id="bDateField" layoutX="14.0" layoutY="75.0" promptText="Birthday Date" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="restaurantPane" layoutX="434.0" layoutY="39.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <ComboBox layoutX="25.0" layoutY="30.0" prefWidth="150.0" promptText="Dishes" />
            <TextField fx:id="workHoursField" layoutX="26.0" layoutY="68.0" promptText="Work hours" />
            <TextField fx:id="ratingField" layoutX="26.0" layoutY="106.0" promptText="Rating" />
         </children>
      </AnchorPane>
      <Button fx:id="updateButton" layoutX="339.0" layoutY="314.0" mnemonicParsing="false" onAction="#updateUser" text="Update" />
   </children>
</AnchorPane>
